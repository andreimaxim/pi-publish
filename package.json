{
  "name": "@andreimaxim/pi-publish",
  "version": "0.0.1",
  "description": "Publish Pi sessions to the web",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/extension",
    "packages/server"
  ],
  "scripts": {
    "test": "npm test --workspaces --if-present",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt --write .",
    "fmt:check": "oxfmt --check .",
    "check": "oxlint && oxfmt --check .",
    "dev:server": "npm run dev -w @andreimaxim/pi-publish-server",
    "deploy:server": "npm run deploy -w @andreimaxim/pi-publish-server"
  },
  "devDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20260217.1",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0"
  },
  "pi": {
    "extensions": [
      "./packages/extension/src/index.ts"
    ]
  }
}
